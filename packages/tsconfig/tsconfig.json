{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": [
      "ESNext"
    ],

    "noEmit": true, // --experimental-strip-types

    // Module
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true, // Windows...
    "resolveJsonModule": true,

    // JSX
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    // Output
    "declaration": true,
    //"noEmitOnError": true,

    "allowImportingTsExtensions": true,
    // https://zenn.dev/uhyo/articles/rewrite-relative-import-extensions-read-before-use
    //"rewriteRelativeImportExtensions": true,

    // Linting
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": false, // Valibot schema

    "allowJs": true,
    "checkJs": true,

    "skipLibCheck": true, // Types do farm depend on?
 },
}
